}

const { title } = Astro.props;
---

<Layout title={title}>
  <div class="flex flex-grow justify-between pt-2 pb-5">
    <nav class="pl-3">
      <a href="/" class="underline underline-offset-2">home</a>
      <a href="/patterns" class="underline underline-offset-2">patterns</a>
      <a href="/explorations" class="underline underline-offset-2"
        >explorations</a
      >
    </nav>
    <div class="pr-3">
      <a href="/">
        <span class="flex-justify-right">▪️</span>
      </a>
    </div>
  </div>
  <slot />
</Layout>

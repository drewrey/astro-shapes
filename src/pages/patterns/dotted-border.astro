---
import PatternLayout from "../../layouts/PatternLayout.astro";

export const meta = {
  title: "Dotted Border",
  referenceUrl:
    "https://anthonyhobday.com/sideprojects/visualtechniques/techniques/borders/dotted-border.html",
  isDraft: false,
};

// This will work with some caveats
// - I'm using the page background. Otherwise, we may need some relative and absolute positioning with z-index
// - The rounding of the border and the inner box doesn't match exactly
// - The rounding doesn't match exactly
// - Balance may look off at certain viewport sizes. May want to clamp that.
---

<PatternLayout title="Shape Playground">
  <div class="flex content-center justify-center">
    <div class="m-4 h-1/2 w-1/2 p-10">
      <div
        class="aspect-square h-1/2 w-1/2 flex-col rounded-3xl border-4 border-dashed border-blue-600 bg-gray-300"
        title="✂️"
      >
        <div class="p-3">
          <div class="aspect-square flex-col rounded-2xl bg-blue-600"></div>
        </div>
      </div>
    </div>
  </div>
</PatternLayout>

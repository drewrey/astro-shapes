---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Shape Playground">
  <div class="grid grid-cols-3">
    <div class="grid-flow-col">
      <svg
        width="100%"
        height="100%"
        class="fill-blue p-4 blur-md hover:blur-none"
      >
        <rect x="0" y="0" width="100" height="100" fill="blue"></rect>
      </svg>
    </div>
    <div class="grid-flow-col">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="100%"
        height="100%"
        class="p-4 blur-md hover:blur-none"
      >
        <circle cx="50" cy="50" r="50" fill="blue"></circle>
      </svg>
    </div>
    <div class="grid-flow-col">
      <svg
        width="100%"
        height="100%"
        xmlns="http://www.w3.org/2000/svg"
        class="p-4 blur-md hover:blur-none"
      >
        <polygon points="50,15 100,100 0,100" fill="blue"></polygon>
      </svg>
    </div>
  </div>
</Layout>
